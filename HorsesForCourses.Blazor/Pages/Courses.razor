@page "/courses"
@using HorsesForCourses.Blazor.Services
@using HorsesForCourses.Blazor.Dtos
@using HorsesForCourses.Blazor.Pages.CourseComponents

<PageTitle>Courses</PageTitle>

<h1>Courses</h1>

<button class="btn btn-primary mb-3" @onclick="ShowAddCourseModal">Add Course</button>

@if (error != null)
{
    <p class="text-danger">@error</p>
}
else if (courses == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th style="white-space: nowrap;">Start Date</th>
                <th style="white-space: nowrap;">End Date</th>
                <th>Coach</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in courses)
            {
                <CourseRow Course="course"
                           OnShowDeleteConfirm="ShowDeleteConfirmModal"
                           OnConfirm="ConfirmCourse"
                           OnEdit="() => ShowEditCourseModal(course.Id)"
                           OnAssignCoach="() => ShowAssignCoachModal(course.Id)"
                           ShowDetails="@(expandedCourseId == course.Id)"
                           OnToggleDetails="@(() => ToggleCourseDetails(course.Id))" />
                
                @if (expandedCourseId == course.Id)
                {
                    <CourseDetailsExpanded Course="course" 
                                         OnClose="() => CloseCourseDetails()" />
                }
            }
        </tbody>
    </table>
}

@if (showAddCourseModal)
{
    <AddCourseForm Show="showAddCourseModal"
                   Course="newCourse"
                   OnValidSubmit="HandleAddCourseValidSubmit"
                   OnClose="HideAddCourseModal" />
}

@if (showEditCourseModal && editingCourse != null)
{
    <EditCourseForm Course="editingCourse"
                   OnValidSubmit="UpdateCourse"
                   OnClose="HideEditCourseModal" />
}

@if (showAssignCoachModal && assigningCourse != null)
{
    <AssignCoachForm Course="assigningCourse"
                     EligibleCoaches="eligibleCoaches"
                     OnAssignCoach="AssignCoachToCourse"
                     OnClose="HideAssignCoachModal" />
}

@if (showDeleteConfirmModal)
{
    <ConfirmDialog Title="Delete Course"
                   Message=@($"Are you sure you want to delete this course?")
                   OnConfirm="HandleDeleteConfirmed"
                   OnCancel="HideDeleteConfirmModal" />
}
