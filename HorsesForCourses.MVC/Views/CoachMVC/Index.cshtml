@using HorsesForCourses.Core
@using HorsesForCourses.Service.DTOs
@model PagedResult<CoachSummaryResponse>

@{
    ViewData["Title"] = "Coaches";
}

<h2>Coaches</h2>

<p>
    <a asp-action="Create" class="btn btn-primary btn-modern">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th># Courses Assigned</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coach in Model.Items)
        {
            <tr>
                <td>@coach.Id</td>
                <td>@coach.Name</td>
                <td>@coach.Email</td>
                <td>@coach.NumberOfCoursesAssignedTo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@coach.Id" class="btn btn-info btn-sm btn-modern">Details</a> |
                    <a asp-action="Edit" asp-route-id="@coach.Id" class="btn btn-warning btn-sm btn-modern">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@coach.Id" class="btn btn-danger btn-sm btn-modern">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Coach pagination">
            <ul class="pagination justify-content-center">
                @if (Model.HasPrevious)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                }

                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }

                @if (Model.HasNext)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                }
            </ul>
        </nav>
    }

    <div class="mt-3">
        <p>Showing @Model.Items.Count of @Model.TotalCount coaches (Page @Model.PageNumber of @Model.TotalPages)</p>
    </div>
</table>