@model HorsesForCourses.Service.DTOs.CourseDto

@{
    ViewData["Title"] = "Assign Coach to Course";
}

<h1>Assign Coach to Course</h1>

<h4>@Model.Title</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="AssignCoachPost" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Select Coach</label>
                <select name="coachId" class="form-control" required>
                    <option value="">-- Select a Coach --</option>
                    @if (ViewBag.Coaches != null)
                    {
                        foreach (var coach in ViewBag.Coaches)
                        {
                            <option value="@coach.Id">@coach.Name (@coach.Email)</option>
                        }
                    }
                </select>
                <small class="form-text text-muted">Only coaches with matching skills will be able to teach this course</small>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Assign Coach" class="btn btn-primary" />
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@if (Model.RequiredSkills != null && Model.RequiredSkills.Any())
{
    <hr />
    <h5>Required Skills for this Course:</h5>
    <div class="mb-3">
        @foreach (var skill in Model.RequiredSkills)
        {
            <span class="badge bg-info me-1">@skill</span>
        }
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}